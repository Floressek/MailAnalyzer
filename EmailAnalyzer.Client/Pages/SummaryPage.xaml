<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmailAnalyzer.Client.Pages.SummaryPage"
             Title="Email Summary">
    
    <Grid RowDefinitions="Auto,*,Auto" 
          Padding="20">
        
        <!-- Header -->
        <StackLayout Grid.Row="0" Spacing="10">
            <Label Text="{Binding ProviderInfo}"
                   FontSize="20"
                   FontAttributes="Bold"/>
            <Label Text="{Binding DateRangeInfo}"
                   FontSize="16"/>
        </StackLayout>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <StackLayout Spacing="20">
                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                 IsVisible="{Binding IsLoading}"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"/>

                <!-- Summary Content -->
                <StackLayout IsVisible="{Binding !IsLoading}">
                    <Frame BorderColor="LightGray" Padding="15" Margin="0,0,0,15">
                        <StackLayout>
                            <Label Text="Summary" 
                                   FontSize="18" 
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding Summary}" 
                                   TextType="Html"/>
                            <Label Text="{Binding EmailCount, StringFormat='Total Emails: {0}'}"
                                   Margin="0,10,0,0"/>
                        </StackLayout>
                    </Frame>

                    <!-- Topic Clusters -->
                    <Label Text="Topics" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           Margin="0,0,0,10"/>
                    <CollectionView ItemsSource="{Binding TopicClusters}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="LightGray" 
                                       Margin="0,0,0,10" 
                                       Padding="10">
                                    <StackLayout>
                                        <Label Text="{Binding Topic}" 
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding Count, StringFormat='Emails in topic: {0}'}"/>
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </StackLayout>
        </ScrollView>

        <!-- Error Message -->
        <Label Grid.Row="1" 
               Text="{Binding ErrorMessage}"
               IsVisible="{Binding HasError}"
               TextColor="Red"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        
        <!-- Bottom Buttons -->
        <HorizontalStackLayout Grid.Row="2" 
                              Spacing="10"
                              HorizontalOptions="Center">
            <Button Text="Back"
                    Command="{Binding BackCommand}"/>
            <Button Text="Refresh"
                    Command="{Binding RefreshCommand}"
                    IsEnabled="{Binding !IsLoading}"/>
        </HorizontalStackLayout>
    </Grid>
    
</ContentPage>