<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="EmailAnalyzer.Client.Pages.SummaryPage"
    Title="Email Analysis">

    <Grid RowDefinitions="Auto,*,Auto" 
          Padding="20"
          RowSpacing="20">
        
        <!-- 
            1) Header (AnalysisTitle, DateRange) 
            2) Main content (ScrollView) 
            3) Bottom buttons (Export, NewAnalysis)
         -->

        <!-- Header section -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="{Binding AnalysisTitle}" 
                   FontSize="24"
                   HorizontalOptions="Center" />
            <Label Text="{Binding DateRange}" 
                   FontSize="16"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Main content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20">

                <!-- Progress section -->
                <Frame IsVisible="{Binding IsAnalyzing}"
                       Padding="20"
                       BorderColor="LightGray">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding ProgressStatus}"
                               HorizontalOptions="Center" />
                        <ProgressBar Progress="{Binding AnalysisProgress}"
                                     HorizontalOptions="Fill" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Results section -->
                <Frame IsVisible="{Binding HasResults}"
                       Padding="20"
                       BorderColor="LightGray">
                    <VerticalStackLayout Spacing="15">
                        
                        <Label Text="Summary"
                               FontSize="20"
                               FontAttributes="Bold" />
                        
                        <!-- Show the analysis summary -->
                        <Label Text="{Binding Summary}"
                               TextType="Html" />

                        <Label Text="Key Insights"
                               FontSize="20"
                               FontAttributes="Bold" />

                        <CollectionView ItemsSource="{Binding KeyInsights}"
                                       Margin="0,10,0,0">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Margin="0,5" 
                                           Padding="10"
                                           BorderColor="LightGray">
                                        <Label Text="{Binding .}" />
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Action buttons -->
        <HorizontalStackLayout 
            Grid.Row="2" 
            Spacing="10"
            HorizontalOptions="Center">
            <Button Text="Export PDF"
                    Command="{Binding ExportCommand}"
                    IsEnabled="{Binding HasResults}" />
            <Button Text="New Analysis"
                    Command="{Binding NewAnalysisCommand}" />
        </HorizontalStackLayout>
    </Grid>

</ContentPage>
