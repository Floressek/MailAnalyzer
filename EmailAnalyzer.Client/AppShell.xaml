<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="EmailAnalyzer.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EmailAnalyzer.Client"
    xmlns:pages="clr-namespace:EmailAnalyzer.Client.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="login" />

    <ShellContent
        Title="Date Selection"
        ContentTemplate="{DataTemplate pages:DateSelectionPage}"
        Route="dateSelection" />
    
    <ShellContent
        Title="Summary"
        ContentTemplate="{DataTemplate pages:SummaryPage}"
        Route="summary" />

</Shell>